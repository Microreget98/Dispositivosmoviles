<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    tools:context=".Inicio"
    android:background="@android:color/darker_gray">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/tvCuento"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="lop"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:padding="5dp">



        <Button
            android:id="@+id/button"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:paddingRight="30dp"/>

        <ImageButton
            android:id="@+id/btnreproducir"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="Reproduce"
            android:layout_marginRight="20dp"
            android:background="@drawable/volver"

            />


        <ImageButton
            android:id="@+id/btnsiguiente"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/flechasig"
            android:text="SIGUIENTE"
            android:layout_marginRight="20dp"
            />


    </LinearLayout>

    <view
        android:id="@+id/lienzo"
        class="com.example.appcuentoscontarte.Lienzo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_weight="8"
        android:background="#FFFFFF" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageButton
                android:id="@+id/btnazul"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#3F51B5"
                android:background="#3F51B5" />


        <ImageButton
            android:id="@+id/btnceleste"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:tag="#00BCD4"
            android:background="#00BCD4" />

            <ImageButton
                android:id="@+id/btnturquesa"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#009688"
                android:background="#009688" />


            <ImageButton
                android:id="@+id/btnverdefuerte"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#4CAF50"
                android:background="#4CAF50" />

        <ImageButton
            android:id="@+id/btnverde"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:tag="#8BC34A"
            android:background="#8BC34A" />

            <ImageButton
                android:id="@+id/btnamarillo"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#FFEB3B"
                android:background="#FFEB3B" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">



            <ImageButton
                android:id="@+id/btnmorado"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#9C27B0"
                android:background="#9C27B0" />

            <ImageButton
                android:id="@+id/btnrosa"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#E91E63"
                android:background="#E91E63" />



            <ImageButton
                android:id="@+id/btnrojo"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#F44336"
                android:background="#F44336" />
            <ImageButton
                android:id="@+id/btnnaranja"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#FF9800"
                android:background="#FF9800" />
            <ImageButton
                android:id="@+id/btncafe"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#8B674D"
                android:background="#8B674D"/>
            <ImageButton
                android:id="@+id/btnnegro"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="#353535"
                android:background="#353535"/>


        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

