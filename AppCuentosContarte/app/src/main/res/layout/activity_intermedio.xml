<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intermedio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/libr"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".9">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Selecciona un cuento"
                android:textSize="25dp"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingVertical="40dp">

            <Button
                android:id="@+id/btncuento1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/portada1"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/btncuento2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3 COCHINITOS"
                android:background="@drawable/btnredondo_amarillo"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/btncuento3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prueba"
                android:background="@drawable/btnredondo_amarillo"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingVertical="40dp">

            <Button
                android:id="@+id/btncuento4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prueba"
                android:background="@drawable/btnredondo_amarillo"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/btncuento5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/btnredondo_amarillo"
                android:text="Prueba"/>

            <Button
                android:id="@+id/btncuento6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/btnredondo_amarillo"
                android:text="Prueba"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingVertical="40dp">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>